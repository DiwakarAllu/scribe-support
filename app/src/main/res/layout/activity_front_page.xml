<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".splashscreen.FrontPageActivity"
        android:background="@color/t65">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<!--            android:background="@drawable/img_8">-->

            <ImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circular_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Scribe Finder"
                android:textColor="@color/t5"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="40dp"
                android:padding="10dp"
                android:gravity="bottom"
                android:weightSum="2">



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:backgroundTint="@color/cardview_shadow_start_color"
                   android:textAllCaps="false"
                    android:textColor="@color/t10"
                    android:text="Log in" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signup_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:textColor="@color/t5"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/cardview_shadow_start_color"
                    android:text="Sign up" />

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
