<?xml version="1.0" encoding="utf-8"?>

        <RelativeLayout
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".signup.needy.FrontPageNeedyActivity"
            android:background="@color/t65">

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:background="@color/t65"
                android:layout_height="match_parent">
<!--                android:background="@drawable/img_8">-->

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/eye" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="serif"
                    android:text="Needy"
                    android:textColor="@color/t5"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="serif"
                    android:text="Register as Needy if you are Visually Impaired student."
                    android:textAlignment="center"
                    android:textColor="@color/t5"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/linear"
                    android:background="@color/t20"
                    android:padding="10dp"
                    />


                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginBottom="45dp"
                    android:padding="5dp"
                    android:gravity="bottom"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/skip_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:backgroundTint="@color/cardview_shadow_start_color"
                        android:textAllCaps="false"
                        android:textColor="@color/t10"
                        android:text="Skip" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/next_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:textColor="@color/t5"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/cardview_shadow_start_color"
                        android:text="Next" />

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>
