<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".signup.TypeOfUserActivity"
    android:background="@color/t65">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<!--            android:background="@drawable/img_8">-->
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        style="@style/Widget.MaterialComponents.Toolbar.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/t20"
                        android:elevation="4dp"
                        app:navigationIcon="@drawable/back"
                        app:navigationIconTint="@color/t5"
                        app:titleTextColor="@color/t5"
                        app:title="Type Of User" />

                </com.google.android.material.appbar.AppBarLayout>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>
            <TextView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:gravity="left"
                android:fontFamily="serif"
                android:text=" "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circular_img" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/message_text_view"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="They have the WILL, will you help them pave the WAY ?"
                android:textAlignment="center"
                android:textColor="@color/t5"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="40dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="bottom"
                android:weightSum="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/needy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:backgroundTint="@color/cardview_shadow_start_color"
                    android:textAllCaps="false"
                    android:textColor="@color/t10"
                    android:text="I am Needy/Visually Impaired" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/volunteer"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:textColor="@color/t5"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/cardview_shadow_start_color"
                    android:text="I am Volunteer" />


            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
