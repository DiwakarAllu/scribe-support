<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/t65"
    tools:context=".scribe.ContactFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/volunteer"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />


            <TextView
                android:id="@+id/username1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/userImg"
                android:singleLine="false"
                android:text="Diwakar Allu"
                android:textColor="@color/lavender"
                android:textIsSelectable="true"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/username1"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@id/userImg"
                android:maxLines="1"
                android:text="Name"
                android:textColor="@color/t5"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recImage3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/phone_icon"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/recImage3"
                android:text="+91 7013920820"
                android:textColor="@color/lavender"
                android:textIsSelectable="true"
                android:textSize="12sp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/makecall_button"
                android:layout_width="120dp"
                android:backgroundTint="@color/t10"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-2dp"
                android:text="Make Call"
                android:textAllCaps="false"
                android:textColor="@color/black_shade_1"
                app:cornerRadius="8dp" />

            <TextView
                android:id="@+id/address2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/phone_number"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@id/recImage3"
                android:maxLines="1"
                android:text="Mobile Number"
                android:textColor="@color/t5"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl2"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recImage2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/email_icon"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

            <TextView
                android:id="@+id/email"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/recImage2"
                android:padding="0dp"
                android:singleLine="false"
                android:text="diwakar.allu.3435@gmail.com"
                android:textColor="@color/lavender"
                android:textIsSelectable="true"
                android:textSize="12sp" />


            <!--        <com.google.android.material.button.MaterialButton-->
            <!--            android:id="@+id/email_button"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="30dp"-->
            <!--            android:layout_alignRight="@id/email"-->
            <!--            android:layout_alignParentTop="true"-->
            <!--            android:layout_alignParentEnd="true"-->
            <!--            android:layout_marginTop="15dp"-->
            <!--            android:layout_marginEnd="5dp"-->
            <!--            android:layout_marginRight="-188dp"-->
            <!--            android:layout_weight="1"-->
            <!--            android:background="@color/cardview_shadow_start_color"-->
            <!--            android:gravity="center"-->
            <!--            android:padding="0dp"-->
            <!--            android:text="Make call"-->
            <!--            android:textAllCaps="false"-->
            <!--            android:textColor="#FF5722"-->
            <!--            android:textSize="15dp" />-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/send_email_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-2dp"
                android:text="Send Email"
                android:backgroundTint="@color/t10"
                android:textAllCaps="false"
                android:textColor="@color/black_shade_1"
                app:cornerRadius="8dp" />

            <TextView
                android:id="@+id/emailtext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/email"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@id/recImage2"
                android:maxLines="1"
                android:text="Email"
                android:textColor="@color/t5"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl3"
            android:layout_gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recImage4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/language"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

            <TextView
                android:id="@+id/lang"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/recImage4"
                android:text="Languages Known   "
                android:textColor="@color/lavender"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lang"
                android:maxLines="100"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@id/recImage4"
                android:text="Email"
                android:textColor="@color/t5"
                android:textSize="14sp" />


        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>
